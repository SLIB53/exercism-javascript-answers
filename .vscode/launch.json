{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Hello World (Debug), Launch Tests",
            "cwd": "${workspaceFolder}/hello-world",
            "program": "${workspaceFolder}/hello-world/node_modules/.bin/jest",
            "args": [
                "--runInBand",
                "--no-cache",
                "--watch"
            ],
            "runtimeArgs": [
                "--inspect"
            ],
            "console": "integratedTerminal"
        },
    ]
}